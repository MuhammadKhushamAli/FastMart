<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DetailedView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <ImageView
        android:id="@+id/detailed_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        />

    <TextView
        android:id="@+id/detailed_item_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/detailed_item_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        >
        <TextView
            android:id="@+id/detailed_item_model"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textAlignment="viewStart"
            />
        <TextView
            android:id="@+id/detailed_item_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textAlignment="viewStart"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/detailed_item_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif-light"
        />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>