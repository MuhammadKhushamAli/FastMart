<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".DetailedView">
    <ScrollView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buy_button"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/detailed_item_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/dod_img_description"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/detailed_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif-black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/detailed_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:id="@+id/detailed_item_model"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textAlignment="viewStart"
                    />
                <TextView
                    android:id="@+id/detailed_item_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/detailed_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/buy_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/buy_button"
        android:layout_alignParentBottom="true"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/confirmation_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>