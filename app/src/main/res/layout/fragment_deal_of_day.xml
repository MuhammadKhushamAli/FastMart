<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealOfDayFragment"
    android:orientation="horizontal"
    android:background="?deal_of_day_background_color"
    android:paddingHorizontal="20dp"
    android:baselineAligned="false"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/deal_of_the_day_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/dod_img_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dod_item_catagory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:id="@+id/dod_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            />
        <TextView
            android:id="@+id/dod_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/dod_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textAlignment="viewStart"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>

</LinearLayout>