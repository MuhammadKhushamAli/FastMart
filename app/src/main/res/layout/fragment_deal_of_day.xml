<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealOfDayFragment"
    android:orientation="horizontal"
    android:theme="@style/Base.Theme.FastMart"
    android:background="?deal_of_day_background_color"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/deal_of_the_day_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dod_item_catagory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/dod_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/dod_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/dod_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textAlignment="viewStart"
            />
    </LinearLayout>

</LinearLayout>